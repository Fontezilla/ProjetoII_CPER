<?import javafx.scene.text.Font?>

<StackPane fx:id="rootStack" alignment="TOP_CENTER" maxHeight="-Infinity" maxWidth="-Infinity" minHeight="720.0" minWidth="1280.0" prefHeight="720.0" prefWidth="1280.0" xmlns="http://javafx.com/javafx/23.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.example.cper_desktop.controllers.BaseLayoutController">

    <children>
      <AnchorPane>
         <children>
      
              <!-- Fundo de vidro (imagem de background com efeito) -->
              <ImageView fitHeight="721.0" pickOnBounds="true" preserveRatio="true">
                  <image>
                      <Image url="@../../images/Background-glass-effect.png" />
                  </image>
              </ImageView>
         </children>
      </AnchorPane>
      <AnchorPane>
         <children>
                          <!-- Zona principal onde o conteúdo será injetado dinamicamente -->
              <StackPane fx:id="mainContent" layoutX="100.0" layoutY="60.0" prefHeight="660.0" prefWidth="1080.0" style="-fx-background-color: #f9f9f9; -fx-border-color: transparent;" />
         </children>
      </AnchorPane>

        <!-- Barra superior (TopBar) com logo, hambúrguer, definições e logout -->
        <AnchorPane id="appBar" maxHeight="60.0" minHeight="60.0" minWidth="1280.0" prefHeight="60.0" prefWidth="1280.0" AnchorPane.leftAnchor="0.0" AnchorPane.rightAnchor="0.0" AnchorPane.topAnchor="0.0">
            <children>

                <!-- Retângulo amarelo com sombra para destaque -->
                <Rectangle fill="#f1c40f" height="62.0" stroke="TRANSPARENT" width="1281.0">
               <effect>
                  <DropShadow height="25.16" radius="5.79" width="0.0" />
               </effect>
                </Rectangle>
            <StackPane layoutX="34.0" layoutY="14.0" prefHeight="30.0" prefWidth="30.0">
               <children>
                        <Circle fill="WHITE" radius="16.0" />
                        <Circle fill="#f1c40f" radius="15.0" />
                        <Label text="CPER" textFill="WHITE">
                            <font><Font name="Arial Bold" size="10.0" /></font>
                        </Label>
               </children>
            </StackPane>
            <HBox layoutX="1100.0" layoutY="15.0" prefHeight="30.0">
               <children>
                  <StackPane prefHeight="30.0" prefWidth="30.0">
                     <children>
                              <ImageView fitHeight="30.0" fitWidth="30.0" preserveRatio="true">
                                  <image>
                              <Image url="@../../images/icons8-settings-144.png" />
                           </image>
                              </ImageView>
                              <Button fx:id="userSettings" onAction="#onSettingsClick" prefHeight="30.0" prefWidth="30.0" style="-fx-background-color: transparent; -fx-border-color: transparent;" />
                     </children>
                  </StackPane>
                  <StackPane prefHeight="30.0" prefWidth="20.0">
                     <children>
            
                                              <!-- Separador visual -->
                            <Line endY="17.5" stroke="white" strokeLineCap="ROUND" />
                     </children>
                  </StackPane>
                  <StackPane prefHeight="30.0" prefWidth="30.0">
                     <children>
                              <ImageView fitHeight="44.0" fitWidth="30.0" preserveRatio="true">
                                  <image>
                              <Image url="@../../images/icons8-logout-100.png" />
                           </image>
                              </ImageView>
                              <Button fx:id="logOut" onAction="#onLogOutClick" prefHeight="30.0" prefWidth="30.0" style="-fx-background-color: transparent; -fx-border-color: transparent;" />
                     </children>
                  </StackPane>
               </children>
            </HBox>
            <StackPane layoutX="100.0" layoutY="15.0" prefHeight="30.0" prefWidth="30.0">
               <children>
                  <ImageView fitHeight="30.0" fitWidth="30.0" pickOnBounds="true" preserveRatio="true">
                     <image>
                        <Image url="@../../images/equal_9453910.png" />
                     </image>
                  </ImageView>
                        <Button fx:id="openMenu" onAction="#toggleMenu" prefHeight="19.0" prefWidth="33.0" style="-fx-background-color: transparent; -fx-border-color: transparent;" />
               </children>
            </StackPane>

            </children>
        </AnchorPane>

        <!-- Menu Lateral Overlay com fundo escurecido e conteúdo dinâmico -->
        <AnchorPane fx:id="menuOverlay" style="-fx-background-color: rgba(0, 0, 0, 0.4);" visible="false">
            <children>
            <Pane layoutX="350.0" onMouseClicked="#toggleMenu" prefHeight="720.0" prefWidth="930.0" />
            <AnchorPane fx:id="menuPane" prefHeight="720.0" prefWidth="350.0">
               <children>

                   <!-- Scroll com VBox dinâmico para inserir botões/menu programaticamente -->
                   <ScrollPane fitToWidth="true" hbarPolicy="NEVER" layoutY="100.0" prefHeight="620.0" prefWidth="350.0">
                       <content>
                           <StackPane alignment="CENTER">
                               <VBox fx:id="menuVBox" alignment="CENTER" managed="true" spacing="2.0" visible="true" />
                               <VBox fx:id="menuVBox1" alignment="CENTER" managed="false" spacing="2.0" visible="false" />
                           </StackPane>
                       </content>
                   </ScrollPane>

                   <!-- Título "SETOR" no topo do menu -->
                      <StackPane layoutY="60.0" prefHeight="40.0" prefWidth="350.0" style="-fx-background-color: rgba(255, 255, 255, 1);">
                          <children>
                              <Label fx:id="setorLabel" text="SETOR">
                                  <font>
                              <Font name="Segoe UI" size="22.0" />
                           </font>
                              </Label>
                          </children>
                      </StackPane>
                  <Pane prefHeight="60.0" prefWidth="350.0" style="-fx-background-color: #f1c40f;">
                     <children>
                        <StackPane layoutX="288.0" layoutY="15.0" prefHeight="30.0" prefWidth="30.0">
                           <children>
                                      <ImageView fitHeight="48.0" fitWidth="25.0" preserveRatio="true">
                                          <image>
                                    <Image url="@../../images/close.png" />
                                 </image>
                                      </ImageView>
                                      <Button fx:id="closeMenu" onAction="#toggleMenu" prefHeight="35.0" prefWidth="35.0" style="-fx-background-color: transparent; -fx-border-color: transparent;" />
                           </children>
                        </StackPane>
                        <StackPane layoutX="34.0" layoutY="14.0" prefHeight="25.0" prefWidth="25.0">
                           <children>
                              <Circle fill="WHITE" radius="16.0" />
                              <Circle fill="#f1c40f" radius="15.0" />
                              <Label text="CPER" textFill="WHITE">
                                 <font>
                                    <Font name="Arial Bold" size="10.0" />
                                 </font>
                              </Label>
                           </children>
                        </StackPane>
                     </children>
                     <effect>
                        <DropShadow radius="4.75" width="0.0" />
                     </effect>
                  </Pane>
                      <Line endY="131.0" layoutY="-31.0" startX="348.5" startY="131.0" stroke="#f1c40f" strokeWidth="3.0">
                          <effect>
                              <DropShadow height="6.49" offsetY="1.0" radius="1.1225" width="0.0">
                                  <color>
                              <Color red="0.6299999952316284" green="0.6299999952316284" blue="0.6299999952316284" />
                           </color>
                              </DropShadow>
                          </effect>
                      </Line>
               </children>
            </AnchorPane>

            </children>
        </AnchorPane>

    </children>
</StackPane>
