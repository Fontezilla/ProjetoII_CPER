    <children>
        <AnchorPane fx:id="root" visible="false" AnchorPane.rightAnchor="120.0" AnchorPane.topAnchor="80.0">

            <children>
                <VBox alignment="CENTER_LEFT" spacing="10.0" style="-fx-padding: 10 15 10 15;" AnchorPane.bottomAnchor="0.0" AnchorPane.leftAnchor="0.0" AnchorPane.rightAnchor="0.0" AnchorPane.topAnchor="0.0">

                    <children>
                        <Label fx:id="titulo" style="-fx-font-weight: bold; -fx-font-size: 16px;" wrapText="true" />

                        <Label fx:id="descricao" maxWidth="260" style="-fx-font-size: 13px;" wrapText="true" />
                    </children>
                </VBox>
            </children>
        </AnchorPane>
    </children>
</AnchorPane>
